@{
    Layout = "~/Views/MasterView/Main.cshtml";
}
@model XCLCMS.View.AdminWeb.Models.Merchant.MerchantAppAddVM

<form id="mainForm" action="@Model.FormAction" method="post">
    <input type="hidden" id="MerchantAppID" name="MerchantAppID" value="@Model.MerchantApp.MerchantAppID" />

    <div class="XCLAccordion" style="border-top: none;">
        <div class="XCLAccordionHeader">1、基本信息：</div>
        <div class="XCLAccordionBody">
            <table class="XCLTableEdit">
                <tr>
                    <td class="XCLTitle" ><span class="XCLRedBolder">*</span>所属商户：</td>
                    <td >
                        <input type="text" id="txtMerchantID" name="txtMerchantID" value="@Model.MerchantApp.FK_MerchantID" />
                    </td>
                    <td class="XCLTitle" ><span class="XCLRedBolder">*</span>商户应用名：</td>
                    <td >
                        <input type="text" id="txtMerchantAppName" name="txtMerchantAppName" value="@Model.MerchantApp.MerchantAppName" />
                    </td>
                    <td class="XCLTitle" >静态资源版本号：</td>
                    <td >
                        <input type="text" name="txtResourceVersion" value="@Model.MerchantApp.ResourceVersion" />
                    </td>
                </tr>
                <tr>
                    <td class="XCLTitle">站点网址：</td>
                    <td>
                        <input type="text" name="txtWebURL" value="@Model.MerchantApp.WebURL" />
                    </td>
                    <td class="XCLTitle">联系人邮箱：</td>
                    <td>
                        <input type="text" name="txtEmail" value="@Model.MerchantApp.Email" />
                    </td>
                    <td class="XCLTitle"><span class="XCLRedBolder">*</span>应用Key：</td>
                    <td>
                        <input type="text" name="txtAppKey" value="@Model.MerchantApp.AppKey" />
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">Meta标题：</td>
                    <td>
                        <textarea name="txtMetaTitle">@Model.MerchantApp.MetaTitle</textarea>
                    </td>
                    <td class="XCLTitle">Meta关键字：</td>
                    <td>
                        <textarea name="txtMetaKeyWords">@Model.MerchantApp.MetaKeyWords</textarea>
                    </td>
                    <td class="XCLTitle">Meta描述：</td>
                    <td>
                        <textarea name="txtMetaDescription">@Model.MerchantApp.MetaDescription</textarea>
                    </td>
                </tr>


                <tr>
                    <td class="XCLTitle">版权信息：</td>
                    <td>
                        <textarea name="txtCopyRight">@Model.MerchantApp.CopyRight</textarea>
                    </td>
                    <td class="XCLTitle">备注：</td>
                    <td>
                        <textarea id="txtRemark" name="txtRemark">@Model.MerchantApp.Remark</textarea>
                    </td>
                    <td class="XCLTitle">记录状态：</td>
                    <td>
                        <select id="selRecordState" name="selRecordState">
                            @Html.Raw(Model.RecordStateOptions)
                        </select>
                    </td>
                </tr>
            </table>
        </div>

        <div class="XCLHandBar">
            <a href="@XCLCMS.View.AdminWeb.Common.WebCommon.RefferUrl" class="easyui-linkbutton" data-options="iconCls:'icon-back'">返回</a>
            @switch ((XCLNetTools.Enum.CommonEnum.HandleTypeEnum)ViewBag.CurrentHandleType)
            {
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.ADD:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存商户应用</a>
                    break;
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.UPDATE:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存修改</a>
                    if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Lib.Permission.Function.FunctionEnum.SysFun_UserAdmin_MerchantAppDel))
                    {
                        <a id="btnDel" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删 除</a>
                    }
                    break;
            }
        </div>
    </div>
</form>

<script type="text/javascript">
    require(["Lib/Merchant"], function (merchant) {
        $(function () {
            merchant.MerchantAppAdd.Init();
        });
    });
</script>